html
  head
    title Vista de productos
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
    link(rel="stylesheet" href="/css/style.css")
  body
    h1(class="tituloCentrado textWhite") Listado de productos
    div(class="container-fluid Centrado")
        div(class="row")
            div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 cont")
                if hayProductos
                    table.table
                        thead
                            tr
                                th(scope='col') Nombre
                                th(scope='col') Precio
                                th(scope='col') Foto
                        tbody
                            each producto in arrayProductos
                                tr
                                    td= producto.titulo 
                                    td= producto.precio
                                    td 
                                        img(src=producto.miniatura alt="im√°gen" class="imagenAdaptada")
                else
                    div
                        h2 No se encontraron productos!
    div(class="container-fluid Centrado")
        div(class="row")
            div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12")
                button(type="button" class="btn btn-primary")
                    a(href="../../" class="textWhite") Volver